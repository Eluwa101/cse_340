<!-- main content heading -->
 <% if (title) { %>
   <h1><%= title %></h1><% } else { %>
    res.redirect("/")<% } %>

<!-- Vehicle Detail View -->
<div class="vehicle-detail-view">
  <div class="vehicle-media">
    <img src="<%= vehicle.inv_image %>" alt="Image of <%= vehicle.inv_make %> <%= vehicle.inv_model %> on CSE Motors" />

    <div class="media-actions">
<% if (locals.loggedin) { %>
      <% if (favoriteExists) { %>
        <form class="favorite-form" method="post" action="/account/favorites/remove">
          <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
          <button type="submit" class="form-button small-button">Remove Favorite</button>
        </form>
      <% } else { %>
        <form class="favorite-form" method="post" action="/account/favorites/add">
          <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
          <input type="hidden" name="returnTo" value="/inv/detail/<%= vehicle.inv_id %>">
          <button type="submit" class="form-button">Save to Favorites</button>
        </form>
      <% } %>
    <% } else { %>
      <p><a href="/account/login">Log in</a> to save this vehicle to your favorites.</p>
    <% } %>
    </div>
  </div>

  <div class="vehicle-details-info">
    <h2><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h2>
    <p><strong>Year:</strong> <%= vehicle.inv_year %></p>
    <p><strong>Price:</strong> $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %></p>
    <p><strong>Description:</strong> <%= vehicle.inv_description %></p>
    <p><strong>Miles:</strong> <%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %></p>
    <p><strong>Color:</strong> <%= vehicle.inv_color %></p>

    <div class="detail-actions">
      <% const msg = `Hi Eluwa, what is the last price of this ${vehicle.inv_year} ${vehicle.inv_make} ${vehicle.inv_model}? When can I come in for a test drive?` %>
      <a class="form-button buy-now"
         href="https://api.whatsapp.com/send/?phone=2349134846401&text=<%= encodeURIComponent(msg) %>&type=phone_number&app_absent=0"
         target="_blank" rel="noopener">
        Buy Now
      </a>
    </div>
  </div>
</div>

<!-- message display -->
<%# message() %>
