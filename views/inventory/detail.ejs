 <% if (title) { %>
   <h1><%= title %></h1><% } else { %>
    res.redirect("/")<% } %>

<div class="vehicle-detail-view">
  <div class="vehicle-media">
    <img src="<%= vehicle.inv_image %>" alt="Image of <%= vehicle.inv_make %> <%= vehicle.inv_model %> on FFo - For Food Only" />

    <div class="media-actions">
<% if (locals.loggedin) { %>
      <% if (favoriteExists) { %>
        <form class="favorite-form" method="post" action="/account/favorites/remove">
          <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
          <button type="submit" class="form-button small-button">Remove Favorite</button>
        </form>
      <% } else { %>
        <form class="favorite-form" method="post" action="/account/favorites/add">
          <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
          <input type="hidden" name="returnTo" value="/inv/detail/<%= vehicle.inv_id %>">
          <button type="submit" class="form-button">Save to Favorites</button>
        </form>
      <% } %>
    <% } else { %>
      <p><a href="/account/login">Log in</a> to save this item to your favorites.</p>
    <% } %>
    </div>
  </div>

  <div class="vehicle-details-info">
    <h2><%= vehicle.inv_make %> <%= vehicle.inv_model %></h2>
    <p><strong>Category Year Label:</strong> <%= vehicle.inv_year %></p>
    <p><strong>Price:</strong> â‚¦<%= new Intl.NumberFormat('en-NG').format(vehicle.inv_price) %></p>
    <p><strong>Description:</strong> <%= vehicle.inv_description %></p>
    <p><strong>Quantity in stock:</strong> <%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %></p>
    <p><strong>Package:</strong> <%= vehicle.inv_color %></p>

    <div class="detail-actions">
      <form method="post" action="/inv/order/<%= vehicle.inv_id %>" class="stack-form">
        <h3>Place delivery order</h3>
        <label for="customer_name">Full name</label>
        <input id="customer_name" name="customer_name" type="text" required>

        <label for="customer_phone">Phone number</label>
        <input id="customer_phone" name="customer_phone" type="tel" required>

        <label for="delivery_address">Delivery address</label>
        <textarea id="delivery_address" name="delivery_address" rows="3" required></textarea>

        <label for="quantity">Quantity</label>
        <input id="quantity" name="quantity" type="number" min="1" value="1" required>

        <button class="form-button buy-now" type="submit">Order for Delivery</button>
      </form>
    </div>
  </div>
</div>
